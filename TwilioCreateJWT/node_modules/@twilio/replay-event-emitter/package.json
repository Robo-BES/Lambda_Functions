{
  "name": "@twilio/replay-event-emitter",
  "version": "0.2.2",
  "description": "An extension to Node's EventEmitter that supports event replay.",
  "main": "./dist/lib.js",
  "browser": "./dist/browser.js",
  "types": "./dist/lib.d.ts",
  "files": [
    "dist/docs",
    "dist/**/*.d.ts",
    "dist/**/*.js",
    "dist/**/*.map",
    "dist/post-install.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "lint": "npx eslint . --ext .ts",
